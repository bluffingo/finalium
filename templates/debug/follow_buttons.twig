{% extends "_layout.twig" %}

{% block title %}Finalium!{% endblock %}

{% block content %}
    <div class="card card-body">
        {% for user in users %}
            <div style="display:flex; align-items:center; gap:8px; margin-bottom:12px;">
                <img src="{{ profile_picture(user.id) }}" alt="{{ user.info.username }}" width="32" height="32">
                {{ user.info.username }}
                {% include 'components/follow_button.twig' with { user: user } %}
            </div>
        {% endfor %}
    </div>
{% endblock %}