{% set layout_template = current_theme == 'beta' ? '_layout.twig' : '_layout_login.twig' %}
{% embed layout_template %}
    {% block title %}Login{% endblock %}

    {% block content %}
        <div class="loginPage">
            <form method="post" name="loginForm" id="loginForm" action="login" class="form-login">
                <h2 class="form-login-heading">Login</h2>
                <input type="text" name="username" class="input-block-level" placeholder="Username">
                <input type="password" name="password" class="input-block-level" placeholder="Password">
                <br>
                <input class="button button-large button-primary" type="submit" value="Login"
                       name="loginsubmit">
                <br>
                {% if current_theme != "beta" %}
                <p>Don't have an account? <a href="/register">Register</a>
                {% endif %}
            </form>
            {% if current_theme != "beta" %}
                <div class="login-footer">
                    {{ localize('footer_copyright', '2021-' ~ ('now' | date('Y'))) }}
                </div>
            {% endif %}
        </div>
    {% endblock %}
{% endembed %}