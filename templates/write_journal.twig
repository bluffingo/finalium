{% extends "_layout.twig" %}

{% block title %}Write{% endblock %}

	{% block content %}
        <div class="card">
            <div class="card-body">
                <h2 style="margin-bottom: 0.5em;">Write</h2>
                <form name="uploadForm" id="uploadForm" method="post" action="write" enctype="multipart/form-data">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h4 style="margin-bottom: 0.5em;">Title</h4>
                            <input type="text" class="form-control form-long uploader-form" id="title" name="title" required>

                            <h4 style="margin-bottom: 0.5em;">Content</h4>
                            <textarea class="form-control form-long uploader-form" name="desc" maxlength="65535"
                                    form="uploadForm"
                                    style="overflow:hidden;resize:vertical" rows="10" required></textarea>

                            {% if user_is_authenticated_admin %}
                                <div class="form-input">
                                    <input type="checkbox" id="news" name="news" value="true">
                                    <label for="news"> Publish as website announcement</label><br>
                                </div>
                            {% endif %}

                            <div class="right">
                                <input class="button button-primary" type="submit" id="upload" name="upload"
                                    value="Post">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    {% endblock %}