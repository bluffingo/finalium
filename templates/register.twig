{% set layout_template = current_theme == 'beta' ? '_layout.twig' : '_layout_login.twig' %}
{% embed layout_template %}
    {% block title %}Register{% endblock %}

    {% block content %}

        {% if error %}
            <div class="banner banner-danger" role="alert">{{ error }}</div>
            <br>
        {% endif %}
        <div class="loginPage">
            <form method="post" name="loginForm" id="loginForm" action="register" class="form-login">
                <h2 class="form-login-heading">{{ localize('register') }}</h2>

                <input type="text" name="email" class="input-block-level" placeholder="Email" required>
                <input type="text" name="username" class="input-block-level" placeholder="Username" required>

                <input type="password" name="pass1" class="input-block-level" placeholder="Password" required>
                <input type="password" name="pass2" class="input-block-level" placeholder="Confirm Password" required>

                {% if captcha_public_token %}
                    <div class="h-captcha" data-sitekey="{{ captcha_public_token }}"></div>
                {% endif %}

                <div>
                    <input type="date" name="birthdate" required />
                </div>

                <input class="button button-big button-primary" type="submit" value="Register"
                       name="registersubmit">
            </form>
        </div>
    {% endblock %}
{% endembed %}