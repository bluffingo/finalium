{% extends "_layout.twig" %}

{% block title %}My uploads {% if page != 1 %}(Page {{ page }}){% endif %}{% endblock %}

	{% block content %}
        <h1>My uploads {% if page != 1 %}(Page {{ page }}){% endif %}</h1>
        <p>Temporary design!</p>
        <div class="card">
            <div class="card-body">
                {% for upload in data.uploads %}
                    {{ upload_box(upload) }}
                    <a class="button button-secondary" href="/edit?v={{ upload.id }}">
                        <span>{{ localize('edit') }}</span>
                    </a>
                    <a class="button button-danger" href="/delete?v={{ upload.id }}"
                       onclick="return confirm('{{ localize('delete_upload_confirm') }}');">
                        <span>{{ localize('delete') }}</span>
                    </a>
                    <hr>
                {% else %}
                    <div class="banner banner-danger" role="alert">You have no uploads!</div>
                {% endfor %}

                {% set le_url = 'my_uploads?page=%s' %}
                <div class="center">{{ pagination(data.count, items_per_page, le_url, page) }}</div>
            </div>
        </div>
    {% endblock %}