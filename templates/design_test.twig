{% extends "_layout.twig" %}

{% set title = "Finalium!" %}

{% block content %}
    <div class="grid">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h1>Buttons</h1>
                    {% set sizes = {
                        'small': 'button-small',
                        '': '',
                        'big': 'button-big'
                    } %}

                    {% for size_label, size_class in sizes %}
                        <h2>{{ (size_label ?: 'normal') | capitalize }}</h2>
                        {% for color in button_color_types %}
                            <div
                                class="button button-{{ color }} {{ size_class }} uix-tooltip"
                                title="This is a{% if size_label %} {{ size_label }}{% endif %} {{ color }} button"
                            >
                                {% if size_label %}{{ size_label }} {% endif %}{{ color }} button!
                            </div>
                        {% endfor %}
                        {#} <h2>{{ size_label ?? 'normal' }} invisible</h2>

                        {% for color in button_color_types %}
                            <div
                                class="button button-{{ color }}-invis {{ size_class }} uix-tooltip"
                                title="This is a{% if size_label %} {{ size_label }}{% endif %} {{ color }}-invis button"
                            >
                                {% if size_label %}{{ size_label }} {% endif %}{{ color }}-invis button!
                            </div>
                        {% endfor %}#}
                        <br>
                    {% endfor %}
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h1>Menus</h1>
                    <div class="menu-container">
                        <div class="menu-button button button-default" data-menu-id="test-menu">
                            Toggle menu
                            <div class="menu-caret-container">
                                <i class="biscuit-icon caret-closed menu-caret"></i>
                            </div>
                        </div>
                        <div class="menu" id="test-menu">
                            <div class="menu-item-button">
                                <span>A menu item button.</span>
                            </div>
                            <div class="menu-item-button">
                                <span>A menu item button with a very long name.</span>
                            </div>
                            <hr>
                            <div class="menu-item-button small">A small menu item button.</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h1>Tables</h1>
                    <table class="styled">
                        <tr class="table-header">
                            <th>Header</th>
                        </tr>
                        <tr>
                            <td>
                                Normal row
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h1>Banners</h1>
                    {% for color in banner_color_types %}
                        {% set article = color|first|lower in ['a','e','i','o','u'] ? 'an' : 'a' %}
                        <div class="banner banner-{{ color }}">
                            This is {{ article }} {{ color }} banner. <a href="/">Go back home</a>.
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}