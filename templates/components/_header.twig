<div id="masthead-container">
    <div id="masthead">
        <div id="header-main">
            <div id="logo-container">
                <div class="button button-secondary-invis masthead-button guide-button" id="guide-toggle">
                    {{ icon("list", 20) }}
                </div>
                <a href="/">
                    <img id="logo" src="{{ logo }}" alt="{{ website_branding.name }}">
                </a>
            </div>
            <form id="masthead-search" action="/search">
                <button id="search-btn" class="button button-secondary">
                    <span>{{ icon("search", 14) }}</span>
                </button>
                <div id="masthead-search-terms">
                    <label><input type="text" name="query" placeholder="Search..."></label>
                </div>
            </form>
        </div>
        <div id="header-user">
            {% if is_user_logged_in %}
                <a href="/upload">
                    <div class="button button-secondary-invis masthead-button tooltip" title="Upload">{{ icon("upload", 20) }}</div>
                </a>
            {% endif %}
            {% if is_user_logged_in %}
                <div style="margin:0;{% if is_user_logged_in %}width:1.75rem{% endif %}"
                     id="{% if is_user_logged_in %}masthead-loggedin{% else %}masthead-signin{% endif %}" class="masthead-user">
                    <div style="margin-top: 4px;">
                        <img class="img-pfp img-fluid" src="{{ profile_picture(user_data.name) }}" alt="{{ user_data.name }}">
                        <div class="menu" id="masthead-below">
                            <ul style="padding:0">
                                {% for link in header_user_links() %}
                                    <li><a class="menulink" href="{{ link.url }}">{{ link.name }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            {% else %}
                <a href="/login">Login</a>
                <a href="/register">Register</a>
            {% endif %}
        </div>
    </div>
</div>