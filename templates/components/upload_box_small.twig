<a href="/watch?v={{ upload.id }}" class="upload-list-item small spf-link">
    <div class="thumbnail">
        {% if upload.type == 0 %}
            <div class="thumbnail-badge-container">
                <div class="thumbnail-badge">
                    {{ convert_time(upload.length) }}
                </div>
            </div>
        {% endif %}
        <img src="{{ thumbnail(upload.id, upload.type, upload.flags.custom_thumbnail) }}" alt="{{ upload.title }}">
    </div>
    <div class="content-wrapper">
        <h3 class="title">{{ upload.title }}</h3>
        <span class="stat">{{ upload.author.info.username }}</span>
        <span class="stat">
            {{ localize('views', upload.views) }}
            {% if date(upload.published) > date('-1 week') %}
            <div class="badge">New</div>
            {% endif %}
            {% if upload.type == 2 %}
            <div class="badge">Image</div>
            {% endif %}
        </span>
    </div>
</a>